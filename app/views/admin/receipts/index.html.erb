<p id="notice"><%= notice %></p>

<h1>Listing Admin Receipts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= link_to 'Show', [:admin, receipt] %></td>
        <td><%= link_to 'Edit', edit_admin_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', [:admin, receipt], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_admin_receipt_path %>
